<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Car app", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                
            </div>

            
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    @if (ViewContext.HttpContext.User.IsInRole("Admin"))
                    {
                    <li> @Html.ActionLink("Log", "Index", "LogModels") </li>
                    }


                    <li>
                    @if (ViewContext.HttpContext.User.IsInRole("Admin"))
                    {
                       
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Data <span class="caret"></span>

                        </a>
                        <ul class="dropdown-menu">
                            <!--visibility of content on web - Employee Database-->

                            <li>@Html.ActionLink("Factory", "Index", "Factory")</li>
                            <li>@Html.ActionLink("Employee", "Index", "Employee")</li>
                            <li class="divider"></li>


                            <!--visibility of content on web - Car Database-->

                            <li>@Html.ActionLink("Cars Database", "Index", "CarsDatabase")</li>

                        </ul>
                    }


                    @if (ViewContext.HttpContext.User.IsInRole("User"))
                    {
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Data <span class="caret"></span>

                        </a>
                        <ul class="dropdown-menu">

                            <!--visibility of content on web - Employee Database-->


                            <li>@Html.ActionLink("Cars Database", "Index", "CarsDatabase")</li>

                        </ul>
                    }
                    </li>






                    </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
        </div>
        <div class="container body-content">
            
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Car Application</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
    </html>
